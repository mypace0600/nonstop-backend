<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.app.nonstop.mapper.SemesterMapper">

    <resultMap id="semesterMap" type="com.app.nonstop.domain.timetable.entity.Semester">
        <id property="id" column="id"/>
        <result property="universityId" column="university_id"/>
        <result property="year" column="year"/>
        <result property="type" column="type"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findAllByUniversityId" resultMap="semesterMap">
        SELECT * FROM semesters 
        WHERE university_id = #{universityId}
        ORDER BY year DESC, type DESC
    </select>
    
    <select id="findById" resultMap="semesterMap">
        SELECT * FROM semesters WHERE id = #{id}
    </select>

    <select id="findByUniversityIdAndYearAndType" resultMap="semesterMap">
        SELECT * FROM semesters
        WHERE university_id = #{universityId}
          AND year = #{year}
          AND type = #{type}::semester_type
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO semesters (university_id, year, type, created_at)
        VALUES (#{universityId}, #{year}, #{type}::semester_type, NOW())
    </insert>

</mapper>
