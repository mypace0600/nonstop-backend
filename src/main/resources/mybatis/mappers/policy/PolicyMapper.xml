<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.nonstop.mapper.PolicyMapper">

    <resultMap id="PolicyResultMap" type="com.app.nonstop.domain.policy.entity.Policy">
        <id property="id" column="id"/>
        <result property="type" column="type"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="url" column="url"/>
        <result property="isMandatory" column="is_mandatory"/>
        <result property="version" column="version"/>
        <result property="isActive" column="is_active"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAllActive" resultMap="PolicyResultMap">
        SELECT *
        FROM policies
        WHERE is_active = true
        ORDER BY id ASC
    </select>

    <select id="findMandatoryActivePolicies" resultMap="PolicyResultMap">
        SELECT *
        FROM policies
        WHERE is_active = true AND is_mandatory = true
        ORDER BY id ASC
    </select>

    <select id="findAgreementsByUserId" resultType="com.app.nonstop.domain.policy.dto.UserPolicyAgreementDto">
        SELECT
            p.id as policyId,
            p.title as title,
            p.type as type,
            p.url as url,
            upa.agreed_at as agreedAt
        FROM user_policy_agreements upa
        JOIN policies p ON upa.policy_id = p.id
        WHERE upa.user_id = #{userId}
        ORDER BY upa.agreed_at DESC
    </select>

    <insert id="saveAgreement" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_policy_agreements (user_id, policy_id, agreed_at)
        VALUES (#{userId}, #{policyId}, NOW())
    </insert>

    <insert id="saveAgreements" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_policy_agreements (user_id, policy_id, agreed_at)
        VALUES
        <foreach collection="agreements" item="item" separator=",">
            (#{item.userId}, #{item.policyId}, NOW())
        </foreach>
    </insert>

</mapper>
