<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.app.nonstop.mapper.BoardMapper">

    <resultMap id="boardMap" type="com.app.nonstop.domain.community.entity.Board">
        <id property="id" column="id"/>
        <result property="communityId" column="community_id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="isSecret" column="is_secret"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findByCommunityId" resultMap="boardMap">
        SELECT
            id,
            community_id,
            name,
            type,
            is_secret,
            created_at
        FROM
            boards
        WHERE
            community_id = #{communityId}
        ORDER BY
            name ASC
    </select>

</mapper>
